<div class="form-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(70, 173, 114,0.6) 50%), url('https://img.clipartfox.com/41ae2ca010239733a6ee136773a2c4b1_amazon-forest-amazon-forest-clipart_1440-900.jpeg');">
</div>

<div class="show-wrapper">
  <div class="show-container">
    <div class="booking-details text-center">
      <% if @booking.snake.user == current_user %>
        <% if @booking.confirmed == true %>
          <h2><%= link_to @booking.user.username, user_path(@booking.user) %> has booked <%= @booking.snake.name %></h2>
          <br>
          <p>From: <%= @booking.from.strftime('%a %d %b %Y') %></p>
          <p>Until: <%= @booking.until.strftime('%a %d %b %Y') %></p>
        <% elsif @booking.confirmed == nil %>
          <p><%= link_to @booking.user.username, user_path(@booking.user) %> would like to book <%= @booking.snake.name %></p>
          <p>From: <%= @booking.from.strftime('%a %d %b %Y') %></p>
          <p>Until: <%= @booking.until.strftime('%a %d %b %Y') %></p>
          <% puts "@booking.snake_id = #{@booking.snake_id}" %>
          <% puts "@booking.id = #{@booking.id}" %>
          <%= link_to "Confirm Booking", "/snakes/#{@booking.snake_id}/bookings/#{@booking.id}", class: "btn btn-danger", method: :patch %>
          <%= link_to "Deny Booking", "/snakes/#{@booking.snake_id}/bookings/#{@booking.id}", class: "btn btn-danger", method: :delete %>
        <% else %>
          <p>You shouldn't be seeing this</p>
        <% end %>
      <% elsif @booking.user%>
        <% if @booking.confirmed == true %>
          <h2>Your booking of <%= @booking.snake.name %> has been confirmed</h2>
          <br>
          <p>From: <%= @booking.from.strftime('%a %d %b %Y') %></p>
          <p>Until: <%= @booking.until.strftime('%a %d %b %Y') %></p>
        <% elsif @booking.confirmed == nil %>
          <h2>Your booking of <%= @booking.snake.name %> has yet to be confirmed by <%= link_to @booking.snake.user.username, user_path(@booking.snake.user) %></h2>
        <% else %>
          <p>You shouldn't be seeing this</p>
        <% end %>
      <% end %>
      <br>
      <br>

      <%= link_to "Back to list of bookings", :back, class: "btn btn-danger" %>
    </div>
  </div>
</div>



