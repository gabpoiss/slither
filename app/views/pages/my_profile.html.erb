<div class="show-wrapper">
  <div class="show-container">
    <div class="picture-title">
      <div class="show-tabs">
        <% my_profile = "<h3>My Profile</h3>" %>
        <% edit_profile = "<h3>Edit Profile</h3>" %>
        <% my_bookings = "<h3>My Bookings</h3>" %>
        <% my_snakes = "<h3>My Snakes</h3>" %>
        <%= link_to my_profile.html_safe, user_path(@user), class: "show-tab my-tab", id: "current-tab" %>
        <%= link_to edit_profile.html_safe, edit_user_registration_path, class: "show-tab edit-tab" %>
        <%= link_to my_bookings.html_safe, user_bookings_path(@user), class: "show-tab my-bookings-tab" %>
        <%= link_to my_snakes.html_safe, user_snakes_path(@user), class: "show-tab my-snakes-tab" %>
      </div>
      <% if @user.facebook_picture_url %>
        <%= cl_image_tag @user.facebook_picture_url, width: 300, height: 300, crop: :fill %>
      <% end %>
      <div class="show-name">
        <h1><%= @user.username %></h1>
      </div>
    </div>
    <div class="show-details">
      <div class="user-details-box">
        <h3>Full Name:</h3>
        <p class="name"><%= @user.first_name %> <%= @user.last_name %></p>
        <h3>Bio:</h3>
        <p class="bio"><%= @user.bio %></p>
      </div>
    </div>
  </div>
</div>


