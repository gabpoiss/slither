<div class="show-wrapper">
  <div class="show-container">
    <div class="picture-title">
      <div class="snake-tab">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-success" %>
        <%= link_to "My Bookings", user_bookings_path(@user), class: "btn btn-primary" %>
        <%= link_to "My Snakes", user_snakes_path(@user), class: "btn btn-warning" %>
      </div>
      <% if @user.facebook_picture_url %>
        <%= cl_image_tag @user.facebook_picture_url, width: 300, height: 300, crop: :fill %>
      <% end %>
      <div class="show-name">
        <h1><%= @user.username %></h1>
      </div>
    </div>
    <div class="show-details">
      <div class="user-details-box">
        <h3>Full Name:</h3>
        <p class="name"><%= @user.first_name %> <%= @user.last_name %></p>
        <h3>Bio:</h3>
        <p class="bio"><%= @user.bio %></p>
      </div>
    </div>
  </div>
</div>


