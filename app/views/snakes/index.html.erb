<div class="container">
    <div class="row">
      <div class="col-xs-12">

      <%= form_tag(snakes_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Catch a snake!', name: nil %>
      <% end %>

      <div class="text-center">
      <h1>Index All Snakes Public</h1>
        <ul class ="ul-no-bullets">
          <% @snakes.each do |snake| %>
            <li><%= link_to snake.name, snake_path(snake) %></li>
          <% end %>
        </ul>
        <%= link_to "Return Home", root_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>
